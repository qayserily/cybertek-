import java.util.Scanner;

public class Question_16 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.println("Enter a word includes 'java' : ");
        String word = scanner.nextLine();

        if (word.charAt(1)=='j' && word.charAt(2)=='a' &&word.charAt(3)=='v' &&word.charAt(4)=='a'){
            System.out.println(true);
        } else if (word.charAt(0)=='j' && word.charAt(1)=='a' &&word.charAt(2)=='v' &&word.charAt(3)=='a'){
            System.out.println(true);
        }else{
            System.out.println(false);
        }
    }
}

/* Given a string word, print true if "java" appears starting at index 0 or 1 in the string,
such as with "javaxxx" or "xjavaxx" but not "xxjavaxx". The string should be 4 and more characters.

Sample Output:
     input: javapython
     output: true

     input: cjavac++
     output: true

     input: c#javaruby
     output: false */
